{
    "manifest_version": 3,
    "name": "DashClock",
    "description": "View the current time with ease, including a dash display.  ",
    "version": "1.0",
    "action": {
        "default_popup": "src/html/popup.html"
    },
    "icons": {
        "16": "src/images/clock.png",
        "32": "src/images/clock.png",
        "48": "src/images/clock.png",
        "128": "src/images/clock.png"
    },
    "background": {
        "service_worker": "src/js/background.js"
    },
    "permissions": [
        "alarms",
        "storage",
        "scripting"
    ]
}